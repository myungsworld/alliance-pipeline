# secrets.yaml.example - 시크릿 설정 예시
# 실제 사용시 secrets.yaml로 복사하여 값 입력
# secrets.yaml은 .gitignore에 추가되어 있음

# 티스토리 API
tistory:
  access_token: "your_tistory_access_token"
  blog_name: "your_blog_name"
  category_id: null

# 텔레그램 봇
telegram:
  bot_token: "123456789:ABCdefGHIjklMNOpqrsTUVwxyz"
  chat_id: "@your_channel"

# 쿠팡 파트너스
coupang:
  access_key: "your_access_key"
  secret_key: "your_secret_key"
  partner_id: "your_partner_id"

# 네이버 계정 (브라우저 액션용)
naver:
  username: "your_naver_id"
  password: "your_naver_password"

# 데이터베이스 (옵션)
database:
  mysql:
    connection_string: "mysql://user:password@localhost/alliance"
  mongodb:
    connection_string: "mongodb://localhost:27017/alliance"
  redis:
    connection_string: "redis://localhost:6379"
